# LineX Backend Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values
# IMPORTANT: Never commit .env.production to version control

# Server Configuration
NODE_ENV=production
PORT=3000

# Redis Configuration (Production Redis instance required)
REDIS_URL=rediss://your-production-redis-url:6379

# Optional Upstash KV REST API (if using Upstash)
KV_URL=rediss://your-upstash-redis-url:6379
KV_REST_API_URL=https://your-upstash-instance.upstash.io
KV_REST_API_TOKEN=your-upstash-token
KV_REST_API_READ_ONLY_TOKEN=your-upstash-readonly-token

# Kaia Blockchain Configuration (Testnet or Mainnet)
KAIA_RPC_URL=https://public-en-kairos.node.kaia.io
KAIA_CHAIN_ID=1001

# Smart Contract Configuration
MOCK_USDT_CONTRACT_ADDRESS=0x09D48C3b2DE92DDfD26ebac28324F1226da1f400

# Fee Delegation (Production private keys)
GAS_PAYER_PRIVATE_KEY=your-production-gas-payer-private-key
DEPLOYER_PRIVATE_KEY=your-production-deployer-private-key

# DappPortal Configuration
DAPPPORTAL_API_KEY=your-production-dappportal-api-key
DAPPPORTAL_WEBHOOK_SECRET=your-production-webhook-secret

# JWT Secret for Authentication
JWT_SECRET=your-production-jwt-secret-minimum-32-characters

# Demo Configuration
DEMO_MODE=false

# Logging
LOG_LEVEL=info

# Production URL (set after deployment)
API_URL=https://your-app.vercel.app