{
  "name": "linex",
  "version": "1.0.0",
  "description": "LineX - Cross-border remittance platform built as a LINE Mini DApp",
  "main": "dist/index.js",
  "scripts": {
    "vercel-build": "pnpm run build && cp -r dist/* api/",
    "build": "tsc && mkdir -p api && cp -r dist/* api/",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:redis": "./scripts/start-redis.sh && pnpm run dev",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist logs",
    "prebuild": "pnpm run clean && mkdir -p logs",
    "prestart": "pnpm run build",
    "forge:build": "cd contracts && ~/.foundry/bin/forge build",
    "forge:test": "cd contracts && ~/.foundry/bin/forge test",
    "forge:deploy:testnet": "cd contracts && ~/.foundry/bin/forge script script/DeployTestUSDT.s.sol --rpc-url kaia_testnet --broadcast --verify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanchaymittal/LineX.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sanchaymittal/LineX/issues"
  },
  "homepage": "https://github.com/sanchaymittal/LineX#readme",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@kaiachain/ethers-ext": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.8",
    "bullmq": "^5.56.10",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "redis": "^5.8.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "yaml": "^2.8.1"
  }
}
